@page "/trip/{tripId:int}/transportation/{id:int}"
@model CapstoneWeb.Pages.TransportationModel
@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "Transportation Overview";
    var notesVisible = string.IsNullOrEmpty(Model.CurrentTransportation.Notes) ? "hide" : string.Empty;
}


<div class="container landing-page">

    <div class="left column">
        <section title="logo" class="panel logo">
            INSERT LOGO HERE
        </section>

        <section title="navigation" class="panel button-group">
            <form method="post">
                <button type="submit" asp-page-handler="profile" disabled>Profile</button>
                <button type="submit" asp-page-handler="logout">Logout</button>
                <button type="submit" asp-page-handler="back">Back</button>
            </form>
        </section>

        <section title="map" class="panel upcoming">
            <h1>Map</h1>
        </section>
    </div>

    <div class="panel right column">
        <h1>@Model.CurrentTransportation.DisplayName</h1>


        <div class="info-section">
            <h2>@Model.CurrentTransportation.StartDate - @Model.CurrentTransportation.EndDate</h2>

            <p class="@notesVisible">Notes: @Model.CurrentTransportation.Notes</p>
        </div>

    </div>

</div>