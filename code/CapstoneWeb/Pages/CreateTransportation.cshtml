@page "/trip/{tripId:int}/transportation/create"
@model CapstoneWeb.Pages.CreateTransportationModel
@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "Create Transportation";
}

<div>
    <h1>Create Transportation</h1>

    <p>@Model.ErrorMessage</p>

    <form method="post">
        <label for="method">Location* </label>
        <input id="method" asp-for="Method" required />

        <label for="startDate">Start Date*</label>
        <input id="startDate" asp-for="StartDate" type="datetime-local" required asp-format="{0:yyyy-MM-ddTHH:mm}"/>

        <label for="endDate">End Date*</label>
        <input id="endDate" asp-for="EndDate" type="datetime-local" asp-format="{0:yyyy-MM-ddTHH:mm}"/>

        <button type="submit">Create Waypoint</button>

        <div>
            <p>* Indicates a required field</p>
        </div>

    </form>

</div>
