@page "/"
@model IndexModel
@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "Trips";
}

<div class="container landing-page">
    <div class="left column">

        <section title="logo" class="panel logo">
            <img id="section-logo" src="~/png/waypointz_logo.png" alt="logo of application"/>
            <h1>WAYPOINTZ</h1>
        </section>

        <section title="navigation" class="panel button-group">
            <form method="post">
                <button type="submit" asp-page-handler="profile" disabled>Profile</button>
                <button type="submit" asp-page-handler="logout">Logout</button>
            </form>
        </section>

        <section title="upcoming" class="panel upcoming">
            <h1>Upcoming</h1>

            <div class="list">

            </div>
        </section>
    </div>

    <section title="trips" class="panel right column">

        <h1>Trips</h1>

        <div class="list" id="trip-list">
            @foreach (var trip in Model.Trips)
            {
                <div class="list-item">
                    <div class="info-section">
                        @trip.StartDate.ToShortDateString() >> @trip.EndDate.ToShortDateString()
                    </div>

                    <div class="name-section">
                        @trip.Name
                    </div>

                    <div class="icon-section">
                        <a asp-page="/trip" asp-route-tripId="@trip.TripId">View</a>
                    </div>
                </div>
            }
        </div>

        <form method="post" class="end">
            <button type="submit" class="full-width-button" asp-page-handler="create">Create Trip</button>
        </form>
    </section>
</div>